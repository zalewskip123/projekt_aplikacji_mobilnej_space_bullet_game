<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/la1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="392dp"
        android:layout_height="80dp"
        android:scaleX="3.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/scren2" />

    <TextView
        android:id="@+id/healthView"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/prstart"
        android:text="Lives 3/3"
        android:textAlignment="center"
        android:textColor="#0BEF17"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/scoresView"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoresView"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/prstart"
        android:text="00000"
        android:textAlignment="center"
        android:textColor="#0BEF17"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bShip"
        android:layout_width="93dp"
        android:layout_height="94dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/blank"
        android:foreground="@drawable/spaceship_red"
        app:iconSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/star2"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:background="@drawable/blank"
        android:foreground="@drawable/star"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:visibility="visible"
        app:iconSize="40dp"
        app:iconTint="#0003A9F4"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/star1"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:visibility="visible"
        android:background="@drawable/blank"
        android:foreground="@drawable/star"
        android:scaleX="0.70"
        android:scaleY="0.70"
        app:iconSize="40dp"
        app:iconTint="#0003A9F4"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/star3"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:background="@drawable/blank"
        android:foreground="@drawable/star"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:visibility="visible"
        app:iconSize="40dp"
        app:iconTint="#0003A9F4"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/star4"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:background="@drawable/blank"
        android:foreground="@drawable/star"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:visibility="visible"
        app:iconSize="40dp"
        app:iconTint="#0003A9F4"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/star5"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:background="@drawable/blank"
        android:foreground="@drawable/star"
        android:scaleX="0.70"
        android:scaleY="0.70"
        android:visibility="visible"
        app:iconSize="40dp"
        app:iconTint="#0003A9F4"
        app:iconTintMode="src_atop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <ImageView
        android:id="@+id/gameOverImage"
        android:layout_width="266dp"
        android:layout_height="209dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/screen1" />

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:text="GAME OVER"
        android:fontFamily="@font/prstart"
        android:textAlignment="center"
        android:textSize="48sp"
        android:visibility="visible"
        android:textColor="#0BEF17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>